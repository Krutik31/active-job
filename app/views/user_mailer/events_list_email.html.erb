<h1>Hello, <%= @user.name %></h1>

<table>
  <tr>
    <th colspan="5"><h3>Events</h3></th>
  </tr>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Venue</th>
    <th>Host</th>
    <th>Date & Time</th>
  </tr>
  <% @events.each do |event| %>
    <tr>
      <td><%= event.title %></td>
      <td><%= event.description %></td>
      <td><%= event.venue %></td>
      <td><%= event.host %></td>
      <td><%= event.eventdate %></td>
    </tr>
  <% end %>
</table>

<br>
<hr>
<br>

<table>
  <tr>
    <th colspan="5"><h3>Enrolled events</h3></th>
  </tr>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Venue</th>
    <th>Host</th>
    <th>Date & Time</th>
  </tr>
  <% @enrolled_events.each do |enrolled_event| %>
    <tr>
      <td><%= enrolled_event.title %></td>
      <td><%= enrolled_event.description %></td>
      <td><%= enrolled_event.venue %></td>
      <td><%= enrolled_event.host %></td>
      <td><%= enrolled_event.eventdate %></td>
    </tr>
  <% end %>
</table>

<p>Thanks for be with us and have a great day!</p>