<%= form_for user, multipart: true do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class:"form-control", placeholder:"Enter username" %>
  </div>
  <br>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class:"form-control", placeholder:"Enter email" %>
  </div>
  <br>

  <div class="row">
    <div class="col-6">
      <%= form.submit value:"#{submit_btn}", class:"btn btn-sm btn-success" %>
      <%= link_to "Back", users_path, class:"btn btn-sm btn-danger" %>
    </div>
  </div>
<% end %>